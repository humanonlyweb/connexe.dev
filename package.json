{
  "name": "connexe",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && simple-git-hooks",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --fix --type-aware",
    "format": "oxfmt  .",
    "format:check": "oxfmt --check ."
  },
  "dependencies": {
    "@nuxt/fonts": "0.13.0",
    "evlog": "^1.1.0",
    "nuxt": "^4.3.0",
    "vue": "^3.5.27",
    "vue-router": "^5.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260130.0",
    "@types/node": "^25.1.0",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "oxlint-tsgolint": "^0.11.4",
    "sass-embedded": "^1.97.3",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.2.4",
    "wrangler": "^4.61.1"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "bunx oxlint --fix --type-aware",
      "bunx oxfmt --write"
    ]
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "bun@1.3.8"
}
